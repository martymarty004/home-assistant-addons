        "name_servers": ["3ffe:501:ffff:101:200:ff:fe00:3f3e"],
        "extra": []
      },
      {
        "subnet": "3ffe:501:ffff:102::/64",
        "ranges": ["3ffe:501:ffff:102::10 3ffe:501:ffff:102::11"],
        "extra": []
      }
    ],
    "hosts": [
      {
        "name": "myclient",
